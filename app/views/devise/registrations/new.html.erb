<!DOCTYPE html>
<html>
  <head>
  </head>
  <body>
  <div class="page-content">
    <div class="page-header">
      <h2>Sign Up</h2><br>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
      <div class = "create_new_product_form">
        <div class="form-group-container">
          <form>
             <div class="form-group row">
              <%= f.label :first_name, class: "col-sm-3 col-form-label" %>
              <div class="col-sm-10">
              <%= f.text_field :first_name, autofocus: true, class: "form-control resizedField", placeholder: "First Name" %>
              </div>
            </div>

            <div class="form-group row">
              <%= f.label :last_name, class: "col-sm-3 col-form-label" %>
              <div class="col-sm-10">
              <%= f.text_field :last_name, autofocus: true, class: "form-control resizedField", placeholder: "Last Name" %>
              </div>
            </div>

            <div class="form-group row">
              <%= f.label :email, class: "col-sm-3 col-form-label" %>
              <div class="col-sm-10">
              <%= f.email_field :email, autofocus: true, class: "form-control resizedField", placeholder: "Email" %>
              </div>
            </div>

            <div class="form-group row">
              <%= f.label :password, class: "col-sm-3 col-form-label" %>
              <div class="col-sm-10">
              <%= f.password_field :password, autocomplete: "off", class: "form-control resizedField", placeholder: "Enter Password" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              </div>
            </div>

            <div class="form-group row">
              <%= f.label :password_confirmation, class: "col-sm-5 col-form-label" %>
              <div class="col-sm-10">
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control resizedField", placeholder: "Enter Password Again" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-md-3">
              <div class="actions">
                <%= f.submit "Sign up", class: "btn btn-default" %>
                </div>
                <div class="login-alt-links">
                  <%= render "devise/shared/links" %>
                  <% end -%>
                </div>
              </div>
              <div class="col-md-6">
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>