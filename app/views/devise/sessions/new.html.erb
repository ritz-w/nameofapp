<!DOCTYPE html>
<html>
  <head>
  </head>
  <body>
  <div class="page-content">
    <div class="page-header">
      <h2>Log In</h2><br>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class = "create_new_product_form">
        <div class="form-group-container">
        <form>
          <div class="form-group row">
            <%= f.label :email, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.email_field :email, autofocus: true, class: "form-control resizedField", placeholder: "Enter Email" %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :password, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
            <%= f.password_field :password, autocomplete: "off", placeholder: "Enter Password", class: "form-control resizedField" %>
            </div>
          </div>
          <% if devise_mapping.rememberable? -%>
          <div class="form-group row">
            <div class="col-md-4">
            <%= f.label :remember_me %>
            </div>
            <div class="col-md-6">
              <%= f.check_box :remember_me %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-2">
              <div class="actions">
                <%= f.submit "Log in", class: "btn btn-default" %>
              </div>
            </div>
            <div class="col-md-6">
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-6">
              <div class="login-alt-links">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
  <% end -%>


<% end %>

  </div>
</body>

