<!DOCTYPE html>
<html>
  <head>
    <title>No Shop</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Dosis|Quicksand|Padauk" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-3 col-lg-2">
          <nav class= "navbar-default navbar-fixed-side navbar-mobile ">
            <div class="navbar-header">
              <div class="mobile-site-title">
                <%= image_tag("cart.png", class: "img-responsive mobile-icon") %>
                <p>NO SHOP</p>
                </div>
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
            </div>
            <div class="navbar-collapse collapse">
              <ul class="nav navbar-nav navbar-links">
                <li> <%= link_to "Home", root_path %> <span class="sr-only"></span></a></li>
                <li>  <%= link_to "About", static_pages_about_path %></li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">View Artworks By <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "Preview All", products_path, method: :get%></li>
                    <li><%= link_to "Artist", static_pages_index_by_artist_path%></li>
                    <li><%= link_to "Date", static_pages_index_by_date_path%></li>
                  </ul>
                </li>
                <li role="separator" class="divider"></li>
                <li><%= link_to "References", static_pages_references_path %></li>
                <li role="separator" class="divider"></li>
                <li> <%= link_to "Contact", static_pages_contact_path %></li>
                </li>
                <li>
                <% if user_signed_in? %>
                  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
                <% else %>
                  <%= link_to('Login', new_user_session_path) %>
                <% end %>
                </li>
                <%= form_tag("/products", method: "get") do %>
                <row>
                  <div class="col-lg-6">
                    <div class="input-group">
                        <%= text_field_tag :q, nil, placeholder: 'Search...', class: 'form-control' %>
                        <span class="input-group-btn">
                          <%= submit_tag("Go!", class: "btn btn-default") %>
                        </span>
                    </div>
                  </div>
                  <% end %>
                </row>
                </li>
              </ul>

              <ul class="nav navbar-nav navbar-icons">
                <li> <%= link_to "⌂", root_path, :id=>"big-icon" %> <span class="sr-only"></span></a></li>
                <li>  <%= link_to "ABOUT", static_pages_about_path %></li>
                <li class="dropdown">
                  <a href="#" id="dropdown-icon-list" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">VIEW BY<span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "PREVIEW", products_path, method: :get%></li>
                    <li><%= link_to "DATE", static_pages_index_by_date_path%></li>
                    <li><%= link_to "ARTIST", static_pages_index_by_artist_path%></li>
                  </ul>
                </li>
                <li role="separator" class="divider"></li>
                <li><%= link_to "REFERENCE", static_pages_references_path %></li>
                <li role="separator" class="divider"></li>
                <li> <%= link_to "✉", static_pages_contact_path, :id=>"big-icon" %></li>
                </li>
              </ul>
            </div>
            <div>
              <button class="expand-button isDown" id="toggle"> ⇔ MENU
              </button>
            </div>
          </nav>
        </div>
      </div>
    </div>
  <div class="content-container" id="mobile-content-container">
      <% if notice %>
      <h4 class="notice alert-warning alert-dismissible" role="alert"><%= notice %></h4>
      <% end %>
      <% if alert %>
      <h4 class="alert alert-danger" role-alert><%= alert %></h4>
      <% end %>
    <div class="site-title" id="desktop-site-title">
      <h1 class="title-text">NO SHOP</h1>
      <%= image_tag("cart.png", class: "img-responsive cart-image") %>
    </div>
    <%= yield %>
    </div>
    <footer>
    &copy; 2017 Ritz Wu
    </footer>
  </body>
</html>
