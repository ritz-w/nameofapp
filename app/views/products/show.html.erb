<h2 class="page-header-form" id="notice"><%= notice %></h2>

<p>
  <strong>Name:</strong><br>
<%= @product.name %>
</p>

<p>
  <strong>Image URL:</strong><br>
  <%= @product.image_url %><br><br>
  <%= image_tag(@product.image_url, :class =>"product_image_show") %>
</p>

<p>
  <strong>Image 2 URL:</strong><br>
  <%= @product.img2_url %><br><br>
  <%= image_tag(@product.img2_url, :class =>"product_image_show") %>
</p>

<p>
  <strong>Artist:</strong><br>
  <%= @product.artist %>
</p>

<p>
  <strong>Year:</strong><br>
  <%= @product.year_made %>
</p>

<p>
  <strong>Description:</strong><br>
  <%= @product.description %>
</p>

<p>
  <strong>Text:</strong><br>
  <%= @product.text %>
</p>

<div class = "box_following_list">
  <button><%= link_to 'Edit', edit_product_path(@product) %> </button> |
  <button><%= link_to 'Back', products_path, method: :get %></button>
</div>

