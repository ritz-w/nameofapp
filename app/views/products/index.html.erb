

<body>
  <section class="regular slider">
  <% @products.each do |product| %>
    <div>
      <div class="flex-container">
        <div class = "flex-item-image">
          <%= image_tag(product.image_url, :class =>"product_image_thumbnail") %>
          <br>
          <%= link_to 'Show', product %> / <%= link_to 'Edit', edit_product_path(product) %> / <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
          
        </div>
        <!-- /.flex-item-->
        <div class = "flex-item-text">
          <div class = "title-text">
            <%= product.name %>
            <br>
            <%= product.artist %>
            <br>
             <%= product.year_made %> 
          </div>
            <br>
          <div>
            <div>
              <%= product.description %>  
            </div>
          </div>
          <div>
              <div>
          </div>
        </div>
        <!-- /.flex-item--></div>
      <!--/.flex-container--></div>
    </div>
  <% end %>
  </section>


  <div class = "box_following_list">
    <button class="btn btn-default"><%= link_to 'Create New Product', new_product_path %></button>
  </div>

  <!-- insert JS-->

</body>

